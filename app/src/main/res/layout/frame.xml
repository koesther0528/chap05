        android:layout_height="match_parent">

        <LinearLayout
            android:background="#ff0000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>
        <LinearLayout
            android:background="#ffff00"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>
        <LinearLayout
            android:background="#00ffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>
